<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pmdm.ud5_preferences"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <!--
     minSdkVersion y targetSdkVersion Esto ya no es usado  aquÃ­ por Android Studio,
    aunque si en antiguos proyectos de Ecplise
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />
    Esto se controla desde el archivo: "build.gradle"
    -->
    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.pmdm.ud5_preferences.Principal"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Permite lanzar la actividad Preferencias desde cualquier App -->
        <activity
            android:name="com.pmdm.ud5_preferences.Preferencias"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.pmdm.ud5_preferences.Preferencias" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>