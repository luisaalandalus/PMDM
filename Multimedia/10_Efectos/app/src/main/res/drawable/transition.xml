<?xml version="1.0" encoding="utf-8"?>

<!-- define un objeto TransitionDrawable mediante XML
     para definir el efecto de pasar de una imagen "primera.jpg" a otra "segunda.jpg" -->
<transition xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/primera"/>
    <item android:drawable="@drawable/segunda"/>
</transition>