<?xml version="1.0" encoding="utf-8"?>

<!-- define un rectángulo de forma vectorial para el botón del ToggleButton
     cuando el botón está activado -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">

    <!-- definir el ancho y color de la línea del rectángulo -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFFFF"/>

    <!-- definir el degradado
         ángulo 90º
         comienza con el color #DD71e349 verde claro
         acaba con el color #AA408f24  verde oscuro  -->
    <gradient
        android:angle="90"
        android:endColor="#AA408f24"
        android:startColor="#DD71e349"/>

    <!-- establecer las 4 esquinas del rectángulo para que sean redondeadas -->
    <corners
        android:bottomLeftRadius="7dp"
        android:bottomRightRadius="7dp"
        android:topLeftRadius="7dp"
        android:topRightRadius="7dp"/>

</shape>