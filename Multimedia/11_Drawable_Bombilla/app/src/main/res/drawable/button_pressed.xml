<?xml version="1.0" encoding="utf-8"?>

<!-- define un rectángulo de forma vectorial para el botón del ToggleButton
     cuando el botón es presionado o clickado.
     Esta imagen del botón dura unos instantes hasta que cambia
     el estado del ToggleButton a activado o desactivado -->
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- definir el ancho y color de la línea del rectángulo -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFFFF"/>

    <!-- definir el degradado
         ángulo 90º
         comienza con el color #DDBBBBBB gris oscuro
         acaba con el color #DD777777  gris claro  -->
    <gradient
        android:angle="90"
        android:endColor="#DD777777"
        android:startColor="#DDBBBBBB"/>

    <!-- establecer las 4 esquinas del rectángulo para que sean redondeadas -->
    <corners
        android:bottomLeftRadius="7dp"
        android:bottomRightRadius="7dp"
        android:topLeftRadius="7dp"
        android:topRightRadius="7dp"/>
</shape>